{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES6",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "files": [
        "src/core/index.ts",
        "src/tokenizer/index.ts",
    ]
}